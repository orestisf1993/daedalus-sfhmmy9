<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context="com.example.daedalus.celllock.LockActivity">

    <!-- Status Text -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YOU ARE LOCKED"
        android:gravity="center"
        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:id="@+id/lockedInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <!-- Password Input -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:text="Password"
        android:textColor="#F2F2F2"
        android:id="@+id/unlockPass"
        android:layout_below="@+id/lockedInfo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/passfieldshape"
        android:layout_marginTop="67dp"
        android:textColorHighlight="#F2F2F2" />

    <!-- Locker Image -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageViewLocker"
        android:src="@mipmap/locker"
        android:layout_below="@+id/unlockPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <!-- Unlock Button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:typeface="monospace"
        android:width="130dp"
        android:height="30dp"
        android:text="Unlock"
        android:id="@+id/unlockButton"
        android:layout_marginTop="-10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
